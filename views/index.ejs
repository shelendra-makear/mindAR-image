<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- AFRAME -->
    <script src="https://aframe.io/releases/1.5.0/aframe.min.js"></script>

    <!-- MINDAR (Image Tracking) -->
    <script src="https://cdn.jsdelivr.net/npm/mind-ar@1.2.5/dist/mindar-image-aframe.prod.js"></script>

    <!-- AFRAME EXTRAS (animation-mixer) -->
    <script src="https://cdn.jsdelivr.net/gh/donmccurdy/aframe-extras@v6.1.1/dist/aframe-extras.min.js"></script>
  </head>

  <body>
    <a-scene
      mindar-image="imageTargetSrc: assets/images/targets.mind; autoStart: true;
      filterMinCF: 0.0001; filterBeta: 0.05; warmupTolerance: 5; missTolerance: 20;
      maxTrack: 1; uiEnabled: false; smoothed: true;"
      embedded
      vr-mode-ui="enabled: false"
      renderer="precision: highp; antialias: true;"
      loading-screen="enabled: false"
      device-orientation-permission-ui="enabled: false"
    >
      <a-assets>
        <a-asset-item id="avatarModel" src="assets/images/anim1.glb"></a-asset-item>
      </a-assets>

      <a-camera position="0 0 0" look-controls="enabled: false"></a-camera>

      <!-- Image Target -->
      <a-entity id="target1" mindar-image-target="targetIndex: 0">
        <a-gltf-model
          id="avatar"
          src="#avatarModel"
          position="0 -0.3 0"
          scale="0.45 0.45 0.45"
          rotation="0 0 0"
          animation-mixer="loop: repeat; clampWhenFinished: false;"
        ></a-gltf-model>
      </a-entity>
    </a-scene>

    <script>
      // Force animation start on iOS and slow devices
      const target = document.querySelector("#target1");
      const model = document.querySelector("#avatar");

      target.addEventListener("targetFound", () => {
        console.log("ðŸŽ¯ Target Found â†’ Start Animation");

        try {
          let mixer = model.components["animation-mixer"];
          if (mixer) {
            mixer.stopAction();
            setTimeout(() => mixer.playAction(), 50); // iOS fix
          }
        } catch (e) {
          console.warn(e);
        }
      });

      target.addEventListener("targetLost", () => {
        console.log("ðŸ›‘ Target Lost â†’ Stop Animation");
        try {
          model.components["animation-mixer"].stopAction();
        } catch (e) {
          console.warn(e);
        }
      });
    </script>
  </body>
</html>
