<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>MindAR Best Quality WebAR</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- AFRAME -->
    <script src="https://aframe.io/releases/1.5.0/aframe.min.js"></script>

    <!-- MindAR -->
    <script src="https://cdn.jsdelivr.net/npm/mind-ar@1.2.0/dist/mindar-image-aframe.prod.js"></script>

    <style>
      body {
        margin: 0;
        overflow: hidden;
      }
      #loading {
        position: fixed;
        inset: 0;
        background: #000;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: sans-serif;
        z-index: 10;
        font-size: 20px;
      }
    </style>
  </head>

  <body>
    <div id="loading">Starting AR...</div>

    <a-scene
      mindar-image="
        imageTargetSrc: assets/images/targets.mind;
        autoStart: true;
        filterMinCF: 0.0001;
        filterBeta: 0.05;
        warmupTolerance: 5;
        missTolerance: 20;
        maxTrack: 2;
      "
      color-space="sRGB"
      renderer="colorManagement: true, physicallyCorrectLights: true"
      vr-mode-ui="enabled: false"
      device-orientation-permission-ui="enabled: true"
      id="scene"
    >
      <a-camera look-controls="enabled: false"></a-camera>

      <!-- Target index 0 -->
      <a-entity mindar-image-target="targetIndex: 0"
        animation__show="startEvents: targetFound; property: opacity; from: 0; to: 1; dur: 300"
        animation__hide="startEvents: targetLost; property: opacity; from: 1; to: 0; dur: 300"
        opacity="0"
      >
        <!-- GLB MODEL -->
        <a-gltf-model
          src="#model"
          position="0 0 0"
          scale="0.2 0.2 0.2"
          rotation="0 0 0"
          animation-mixer
        ></a-gltf-model>
      </a-entity>

      <!-- Assets -->
      <a-assets>
        <a-asset-item id="model" src="assets/images/anim1.glb"></a-asset-item>
      </a-assets>

    </a-scene>

    <script>
      // HIGH-RES CAMERA BOOST for BETTER TRACKING
      async function enableHighResCamera() {
        try {
          const stream = await navigator.mediaDevices.getUserMedia({
            video: {
              facingMode: "environment",
              width: { ideal: 1920 },
              height: { ideal: 1080 },
              frameRate: { ideal: 60 }
            }
          });

          const scene = document.querySelector("#scene");
          scene.systems["mindar-image-system"].video = stream;
        } catch (e) {
          console.warn("High-res camera not supported on this device.");
        }
      }

      document.addEventListener("DOMContentLoaded", async () => {
        await enableHighResCamera();

        // Hide loading screen when scene is ready
        const scene = document.querySelector("a-scene");
        scene.addEventListener("loaded", () => {
          document.getElementById("loading").style.display = "none";
        });
      });
    </script>

  </body>
</html>
